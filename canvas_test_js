/* for (let i = 300; i <= 550; i += 5) {
	ctx.beginPath();
	ctx.arc(i, 300, 100, 0, 2*pi, false);
	ctx.strokeStyle = "#22c1c3";
	ctx.stroke();
} */

	let x = 50;
	let y = 200;
	let dx = 5 ;
	
	function animate () {
		requestAnimationFrame(animate);

		// Отчистка поля canvas
		ctx.clearRect(0, 0, innerWidth, innerHeight);
		
		ctx.beginPath();
		ctx.arc(x, y, 50, 0, 2*pi, false);
		ctx.strokeStyle = "#b21f1f";
		ctx.stroke();
		
		if (x + 50 > innerWidth || x - 50 < 0) {
			dx = -dx;
		}
		x += dx;
	}
	
	animate();



